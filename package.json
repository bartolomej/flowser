{
  "name": "flowser",
  "private": true,
  "version": "1.0.0",
  "description": "Easily inspect and debug Flow blockchain â›“",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start:desktop:prod:macos-arm": "yarn run build:desktop && ./app/release/build/mac-arm64/Flowser.app/Contents/MacOS/Flowser",
    "start:desktop": "cd frontend && yarn run electron:serve",
    "build:desktop": "yarn run build && cd app/scripts && node setup.js && sh build.sh",
    "build:desktop:win": "yarn run build:desktop win",
    "build:desktop:mac": "yarn run build:desktop mac",
    "build:desktop:linux": "yarn run build:desktop linux",
    "build:desktop:all": "yarn run build:desktop all",
    "start": "lerna run start --parallel",
    "cleanup": "lerna run cleanup --parallel && rm -rf node_modules app/node_modules app/build app/release flowdb",
    "build": "lerna run build --scope @flowser/backend --scope @flowser/shared && lerna run build --scope @flowser/frontend",
    "bootstrap": "yarn install && yarn run lerna:bootstrap && husky install",
    "lerna:bootstrap": "lerna bootstrap",
    "build:libs": " npx lerna run build --scope @flowser/types --scope @flowser/frontend",
    "format-all": "npx prettier --write \"{backend,frontend}/src/**/*.{ts,tsx,js}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onflowser/flowser.git"
  },
  "keywords": [
    "flow",
    "onflow",
    "blockchain",
    "development-tool"
  ],
  "author": "@bartolomej, @jgololicic, @monikaxh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onflowser/flowser/issues"
  },
  "homepage": "https://github.com/onflowser/flowser#readme",
  "devDependencies": {
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.2"
  },
  "workspaces": {
    "packages": [
      "./backend",
      "./frontend",
      "./shared"
    ]
  }
}
