  "bugs": {
    "url": "https://github.com/onflowser/flowser/issues"
  },
  "homepage": "https://github.com/onflowser/flowser#readme",
  "devDependencies": {
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.2"
  },
  "workspaces": [
    "./backend",
    "./frontend",
    "./types",
    "./desktop",
    "./web"
