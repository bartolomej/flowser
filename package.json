{
  "name": "flowser",
  "private": true,
  "version": "1.0.0",
  "description": "Easily inspect and debug Flow blockchain â›“",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "cleanup": "lerna run cleanup --parallel",
    "build": "lerna run build --parallel",
    "bootstrap": "yarn install && npx lerna bootstrap && husky install && npx lerna run build --scope @flowser/types --scope @flowser/frontend",
    "format-all": "npx prettier --write \"{backend,frontend}/src/**/*.{ts,tsx,js}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onflowser/flowser.git"
  },
  "keywords": [
    "flow",
    "onflow",
    "blockchain",
    "development-tool"
  ],
