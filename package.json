{
  "name": "flowser",
  "private": true,
  "version": "1.0.0",
  "description": "Easily inspect and debug Flow blockchain â›“",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "cleanup": "lerna run cleanup --parallel && rm -rf node_modules",
    "build": "lerna run build --parallel",
    "bootstrap": "yarn install && yarn run lerna:bootstrap && husky install",
    "lerna:bootstrap": "lerna bootstrap",
    "build:libs": " npx lerna run build --scope @flowser/types --scope @flowser/frontend",
    "format-all": "npx prettier --write \"{backend,frontend}/src/**/*.{ts,tsx,js}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onflowser/flowser.git"
  },
  "keywords": [
    "flow",
    "onflow",
    "blockchain",
    "development-tool"
  ],
  "author": "@bartolomej, @jgololicic, @monikaxh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onflowser/flowser/issues"
  },
  "homepage": "https://github.com/onflowser/flowser#readme",
  "devDependencies": {
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.2"
  },
  "workspaces": {
    "packages": [
      "./backend",
      "./frontend",
      "./types"
    ],
    "nohoist": [
      "**/backend"
    ]
  }
}
