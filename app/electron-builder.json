{
  "productName": "Flowser",
  "extends": null,
  "appId": "dev.flowser.app",
  "electronVersion": "20.1.0",
  "afterSign": "./scripts/notarize.js",
  "files": [
    "build/electron/**/*",
    "build/react/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "directories": {
    "buildResources": "build/react/static",
    "output": "release/build"
  },
  "mac": {
    "target": {
      "target": "default",
      "arch": [
        "arm64",
        "x64"
      ]
    },
    "type": "distribution",
    "hardenedRuntime": true,
    "icon": "build/react/static/app-icon/icons/mac/icon.icns",
    "entitlements": "src/entitlements.mac.plist",
    "entitlementsInherit": "src/entitlements.mac.plist",
    "category": "public.app-category.developer-tools"
  },
  "dmg": {
    "sign": false,
    "background": "build/react/static/macos-background.tiff",
    "contents": [
      {
        "x": 219,
        "y": 358,
        "type": "dir",
        "name": "Flowser.app"
      },
      {
        "x": 439,
        "y": 358,
        "type": "link",
        "name": "Applications",
        "path": "/Applications"
      }
    ],
    "artifactName": "Flowser-${version}-${os}-${arch}.${ext}"
  },
  "win": {
    "icon": "build/react/static/app-icon/icons/win/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "appx",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "artifactName": "Flowser-${version}-${os}-${arch}-setup.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": "x64"
      },
      {
        "target": "deb",
        "arch": "x64"
      }
    ],
    "category": "Development",
    "icon": "build/react/static/app-icon/icons/png/",
    "executableName": "Flowser",
    "artifactName": "flowser-${version}-${os}-${arch}.${ext}"
  },
  "extraResources": [
    "./assets/**"
  ],
  "publish": {
    "provider": "github",
    "owner": "onflowser",
    "repo": "flowser"
  }
}
